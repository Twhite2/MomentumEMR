# Database
DATABASE_URL="postgresql://user:password@localhost:5432/emr_db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-min-32-chars"

# Node Environment
NODE_ENV="development"

# File Storage Configuration
# Set to 'true' to use S3/R2, 'false' to use local storage
USE_S3="false"

# S3/Cloudflare R2 Configuration (only if USE_S3=true)
S3_REGION="auto"
S3_ENDPOINT="https://[account-id].r2.cloudflarestorage.com"
S3_ACCESS_KEY_ID="your-access-key-id"
S3_SECRET_ACCESS_KEY="your-secret-access-key"
S3_BUCKET="emr-files"
S3_PUBLIC_URL="https://your-cdn-domain.com"

# Email Configuration (Optional - for future email notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yourhospital.com"

# SMS Configuration (Optional - for future SMS notifications)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Application Configuration
APP_NAME="Momentum EMR"
APP_URL="http://localhost:3000"
